<h1>Edit <%=h @gram_template.name %> Template</h1>

<% form_for(@gram_template) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :slogan %><br />
    <%= f.text_area :slogan %>
  </p>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', gram_templates_path %>