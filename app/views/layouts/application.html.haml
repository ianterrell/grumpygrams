!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:fb" => "http://www.facebook.com/2008/fbml" }
  %head
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}/
    %title= "GrumpyGrams :: "+controller.controller_name.capitalize
    = stylesheet_link_tag :all
    %script{:type => "text/javascript", :src  => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}
    %script{:type => "text/javascript", :src  => "http://cdn.jquerytools.org/1.2.3/tiny/jquery.tools.min.js"}
    %script{:type => "text/javascript", :src  => "http://connect.facebook.net/en_US/all.js"}
    = javascript_include_tag "jquery-ui-1.8.2.custom.min", "rails", "application"
    = csrf_meta_tag
    
  %body  
    #fb-root
    #top
    #content
      #login
        = link_to image_tag('fb-login-button.png'), "#", :onclick => "login(); return false;"
      #header
        = image_tag "logo.png"
      = yield
